{
	"main": {
		"flags": ["-Wall", "-Werror", "-std=c99", "-O3 -march=x86-64"],
		"defines": ["R3_BUILD_DLL"],

		"includes": [".", "external/include"],
		"sources": ["libECX/src/*.c"],
		"libraries": {"r3kit": "external/bin"},

		"name": "libECX",
		"type": "dll",
		"dest": "build"
	},
	
	"static": {
		"flags": ["-Wall", "-Werror", "-std=c99", "-O3 -march=x86-64"],
		"defines": ["R3_BUILD_DLL"],

		"includes": [".", "external/include"],
		"sources": ["libECX/src/*.c"],
		"libraries": {"r3kit": "external/bin"},

		"name": "libECX",
		"type": "lib",
		"dest": "build"
	},
	
	"tests": {
		"flags": ["-Wall", "-Werror", "-std=c99"],

		"includes": [".", "external/include"],
		"sources": ["tests/*.c"],
		"libraries": {
			"libECX": "build",
			"r3kit": "external/bin"
