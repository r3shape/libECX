{
	"main": {
		"flags": ["-Wall", "-Werror", "-std=c99", "-O3 -march=x86-64"],
		"defines": ["R3_BUILD_DLL"],

		"includes": [".", "external"],
		"sources": ["src/libECX/*.c"],
		"libraries": {"R3": "external/bin"},

		"name": "libECX",
		"type": "dll",
		"dest": "bin"
	},
	
	"static": {
		"flags": ["-Wall", "-Werror", "-std=c99", "-O3 -march=x86-64"],
		"defines": ["R3_BUILD_DLL"],

		"includes": [".", "external"],
		"sources": ["src/libECX/*.c"],
		"libraries": {"R3": "external/bin"},

		"name": "libECX",
		"type": "lib",
		"dest": "bin"
	},
	
	"tests": {
		"flags": ["-Wall", "-Werror", "-std=c99"],

		"includes": [".", "external"],
		"sources": ["src/tests/*.c"],
		"libraries": { "R3": "external/bin", "ECX": "bin" },

		"name": null,
		"type": "exe",
		"dest": "bin"
	}
}
